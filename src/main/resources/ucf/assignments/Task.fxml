<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ucf.assignments.TaskController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="104.0" minHeight="10.0" prefHeight="67.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="104.0" minHeight="10.0" prefHeight="67.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <MenuBar fx:id="menuBar" GridPane.columnSpan="6" GridPane.valignment="TOP">
            <menus>
                <Menu fx:id="fileMenuItem" mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem fx:id="importMenuItem" mnemonicParsing="false" onAction="#importPressed" text="Import" />
                        <MenuItem fx:id="exportMenuItem" mnemonicParsing="false" onAction="#exportPressed" text="Export" />
                    </items>
                </Menu>
                <Menu fx:id="viewMenuItem" mnemonicParsing="false" text="View">
                    <items>
                        <MenuItem fx:id="displayAllMenuItem" mnemonicParsing="false" onAction="#displayAllPressed" text="Display All" />
                        <MenuItem fx:id="displayIncompleteMenuItem" mnemonicParsing="false" onAction="#displayIncompletePressed" text="Display Incomplete" />
                        <MenuItem fx:id="displayCompletedMenuItem" mnemonicParsing="false" onAction="#displayCompletedPressed" text="Display Completed" />
                  <MenuItem fx:id="resetMenuItem" mnemonicParsing="false" onAction="#resetMenuItemPressed" text="Reset" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <TableView fx:id="tableView" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.columnSpan="4" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.rowSpan="2">
            <columns>
                <TableColumn fx:id="descriptionColumn" prefWidth="-1.0" sortable="false" text="Description" />
                <TableColumn fx:id="dueDateColumn" prefWidth="-1.0" text="Due Date" />
                <TableColumn fx:id="finishedColumn" prefWidth="-1.0" sortable="false" text="Finished" />
            </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
        </TableView>
      <Button fx:id="modifyItemButton" mnemonicParsing="false" onAction="#modifyItemButtonPressed" text="Modify Item" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
      <Button fx:id="deleteItemButton" mnemonicParsing="false" onAction="#deleteItemButtonPressed" text="Delete Item" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
      <Button fx:id="addItemButton" mnemonicParsing="false" onAction="#addItemButtonPressed" text="Add Item" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
      <Button fx:id="deleteAllItemsButton" mnemonicParsing="false" onAction="#deleteAllItemsButtonPressed" text="Delete All Items" GridPane.columnIndex="4" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
    </children>
