<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ucf.assignments.InventoryManager">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
         <menus>
            <Menu mnemonicParsing="false" text="File">
               <items>
                  <MenuItem fx:id="importMenuItem" mnemonicParsing="false" onAction="#importMenuItemPressed" text="Import" />
                  <MenuItem fx:id="exportMenuItem" mnemonicParsing="false" onAction="#exportMenuItemPressed" text="Export" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
   </top>
   <center>
      <TableView prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <columns>
            <TableColumn fx:id="nameColumn" prefWidth="350.0" text="Name" />
            <TableColumn fx:id="serialNumberColumn" prefWidth="350.0" text="Serial Number" />
            <TableColumn fx:id="valueColumn" prefWidth="100.0" text="Value" />
         </columns>
      </TableView>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="addItemButton" mnemonicParsing="false" onAction="#addItemButtonPressed" text="Add Item" HBox.hgrow="ALWAYS" />
            <Button fx:id="modifyItemButton" mnemonicParsing="false" onAction="#modifyItemButtonPressed" text="Modify Item" HBox.hgrow="ALWAYS" />
            <Button fx:id="searchItemButton" mnemonicParsing="false" onAction="#searchItemButtonPressed" text="Search Item" />
            <Button fx:id="deleteItemButton" mnemonicParsing="false" onAction="#deleteItemButtonPressed" text="Delete Item" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
